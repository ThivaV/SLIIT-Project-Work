<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1" android:background="@drawable/pic06">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:text="Colombo Cab Services" android:gravity="center" android:textSize="20sp" android:textColor="#FFFFFF" android:id="@+id/Title"/>
<ListView android:layout_width="match_parent" android:id="@+id/list" android:layout_height="354dp" android:layout_weight="0.99" android:background="@drawable/pic1"></ListView>
<Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="15sp" android:id="@+id/CompareServices" android:text="Compare Services"></Button>
</LinearLayout>